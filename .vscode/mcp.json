{
  "servers": {
    "io.github.getsentry/sentry-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@sentry/mcp-server@0.25.0",
        "--access-token=${input:SENTRY_ACCESS_TOKEN}"
      ],
      "gallery": "https://api.mcp.github.com",
      "version": "0.25.0"
    }
  },
  "inputs": [
    {
      "id": "SENTRY_AUTH_TOKEN",
      "type": "promptString",
      "description": "Your Sentry user authentication token",
      "password": true
    }
  ]
}
