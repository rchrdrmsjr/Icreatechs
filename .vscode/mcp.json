{
  "servers": {
    "io.github.getsentry/sentry-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@sentry/mcp-server@0.25.0",
        "--access-token=${input:SENTRY_AUTH_TOKEN}"
      ],
      "gallery": "https://api.mcp.github.com",
      "version": "0.25.0"
    },
    "io.github.supabase/supabase-mcp": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server@latest",
        "--access-token=${input:SUPABASE_ACCESS_TOKEN}",
        "--project-ref=${input:SUPABASE_PROJECT_REF}"
      ],
      "gallery": "https://api.mcp.github.com"
    }
  },
  "inputs": [
    {
      "id": "SENTRY_AUTH_TOKEN",
      "type": "promptString",
      "description": "Your Sentry user authentication token",
      "password": true
    },
    {
      "id": "SUPABASE_ACCESS_TOKEN",
      "type": "promptString",
      "description": "Your Supabase access token (from https://supabase.com/dashboard/account/tokens)",
      "password": true
    },
    {
      "id": "SUPABASE_PROJECT_REF",
      "type": "promptString",
      "description": "Your Supabase project reference ID (found in project settings URL)"
    }
  ]
}
